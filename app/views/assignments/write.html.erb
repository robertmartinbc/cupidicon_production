<h1>Write Assignment</h1>
<h1><%= @assignment.title %></h1>

<p><%= @assignment.body %></p>

<div class="span-6">
    <%= form_for @assignment, html: { class: 'form-horizontal' } do |f| %>
      </div>
      <div class="control-group">
        <%= f.label :body, class: 'control-label' %>
        <div class="controls">
          <%= f.text_area :body, rows: 8 %>
        </div>
      </div>
      </div>
    <% end %>
  </div>
</div>

<%= form_tag("#{@assignment.id}/renew") do %>
  <div><%= submit_tag 'Release' %></div>
<% end %>

<%= form_tag("#{@assignment.id}/renew") do %>
  <div><%= submit_tag 'Save' %></div>
<% end %>

<%= form_tag("#{@assignment.id}/renew") do %>
  <div><%= submit_tag 'Submit' %></div>
<% end %>



